<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="@dimen/corner_radius">

    <LinearLayout
        android:id="@+id/timeline_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TimelineDetailFragment" >

        <TextView
            android:id="@+id/timeline_detail_handle"
            android:transitionName="handle"
            style="@style/yambaText.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/timeline_detail_timestamp"
            android:transitionName="time"
            style="@style/yambaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/timeline_detail_tweet"
            android:transitionName="tweet"
            style="@style/yambaText.medium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="@dimen/elevation_mid"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@android:color/white" />

    </LinearLayout>
</android.support.v7.widget.CardView>